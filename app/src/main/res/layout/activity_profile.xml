<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".view.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageButton
            android:id="@+id/profile_back_btn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/ic_baseline_chevron_left_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/info_profile_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
             android:background="#30000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_back_btn" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_out_et_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_profile_logo">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ge_snd_bookk"
                android:editable="false"
                android:hint="البريد الإلكتروني"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/_35sdp"
                android:padding="@dimen/_5sdp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_school_id_out"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_out_et_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/school_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ge_snd_bookk"
                android:hint="الرقم التعريفى للمدرسة"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/_35sdp"
                android:padding="@dimen/_5sdp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_out_et_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_school_id_out">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ge_snd_bookk"
                android:hint="الإسم"
                android:inputType="textPersonName"
                android:minHeight="@dimen/_35sdp"

                android:padding="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_out_et_civil_number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_out_et_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_et_civil_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ge_snd_bookk"
                android:hint="الرقم المدنى"
                android:inputType="textPersonName"
                android:minHeight="@dimen/_35sdp"

                android:padding="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_out_et_father_phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_out_et_civil_number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_et_father_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ge_snd_bookk"
                android:hint="رقم الأب"
                android:inputType="number"
                android:minHeight="@dimen/_35sdp"
                android:padding="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_out_et_mather_phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:visibility="visible"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_out_et_father_phone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_et_mather_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ge_snd_bookk"
                android:hint="رقم الأم"
                android:inputType="number"
                android:minHeight="@dimen/_35sdp"
                android:padding="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_out_et_level"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_1sdp"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/_30sdp"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_out_et_mather_phone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_et_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ge_snd_bookk"
                android:hint="المرحلة الدراسية"
                android:inputType="textAutoCorrect"
                android:minHeight="@dimen/_35sdp"
                android:padding="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_out_et_adress"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:endIconDrawable="@drawable/add_location"
            app:endIconMode="custom"
            app:hintTextAppearance="@style/MyHintStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_out_et_level">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_et_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ge_snd_bookk"
                android:hint="اضغط لتحديد الموقع"
                android:inputType="text"

                android:minHeight="@dimen/_35sdp"
                android:padding="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>



        <View
            android:id="@+id/profile_v_separate"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="#D8D8D8"
            app:layout_constraintTop_toBottomOf="@id/profile_out_et_adress" />


        <ImageView
            android:id="@+id/btn_save_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/save"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_v_separate" />

        <ProgressBar
            android:id="@+id/profile_progressbar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
